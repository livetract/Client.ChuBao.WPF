<UserControl x:Class="UI.Client.ChuBao.Components.LinkDetailComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Client.ChuBao.Components" 
             xmlns:viewmodels="clr-namespace:UI.Client.ChuBao.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:ContactViewModel}"
             mc:Ignorable="d" 
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid x:Name="grid_displayInformation" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="grid_basic"
                Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Text="姓名："/>
                <TextBlock Grid.Column="0" Grid.Row="1" Text="电话："/>
                <TextBlock Grid.Column="0" Grid.Row="2" Text="小区："/>
                <TextBlock Grid.Column="0" Grid.Row="3" Text="门牌："/>

                <TextBlock Grid.Column="1" Grid.Row="0"  Text="{Binding LinkItem.Name}"/>
                <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding LinkItem.Phone}"/>
                <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding LinkItem.Complex}"/>
                <TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding LinkItem.Door}"/>
            </Grid>

            <Grid x:Name="grid_record"
                  Grid.Column="1">
                <ListBox x:Name="lb_recordlist" 
                         ItemsSource="{Binding Records}"
                         ItemContainerStyle="{DynamicResource ListBoxItemContainer_Customer}" 
                         Style="{DynamicResource ListBoxStyle_Customer}" >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="10 0 0 0" Text="{Binding AddTime, StringFormat={}{0:yy-MM-dd}}" />
                                <TextBlock Margin="10 0 0 0" Text="{Binding Booker}" />
                                <TextBlock Margin="10 0 0 0" Text="{Binding Content}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    
                </ListBox>
            </Grid>

        </Grid>

        <Grid x:Name="grid_submitnewrecord"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Text="新的联络记录："
                       Grid.Row="0"/>
            
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="tbx_newrecord" 
                         Width="300"
                         Height="100"
                         Text="{Binding NewRecord.Content}"
                         Grid.Column="0"/>
                <Button Content="提交"
                        Command="{Binding SubmitNewLinkRecordCommand}"
                        CommandParameter="{Binding ElementName=tbx_newrecord, Path=Text}"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"/>
            </Grid>
        </Grid>
        
    </Grid>
</UserControl>
