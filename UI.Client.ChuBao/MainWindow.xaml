<Window x:Class="UI.Client.ChuBao.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        Title= "储宝·CMS"
        
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp" 
        xmlns:viewmodels="clr-namespace:UI.Client.ChuBao.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        
        mc:Ignorable="d"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        BorderThickness="0"
        Background="Transparent"
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        >

    <Border BorderThickness="0"
            BorderBrush="Blue"
            Background="White">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition />
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>
            
                <Grid>
                    <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="35"/>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="35"/>
                    <ColumnDefinition Width="35"/>
                    <ColumnDefinition Width="35"/>
                </Grid.ColumnDefinitions>

                <!--<i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:CallMethodAction TargetObject="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                                MethodName="DragMove"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>-->
                    <!--👆这个地方有限制：只有有内容的时候才能拖动-->

                <Image x:Name="image_logo"
                       Source="/images/logo.png" 
                       Grid.Column="0"/>
                <TextBlock x:Name="tbx_title"
                           Text="{Binding RelativeSource={RelativeSource AncestorType=Window},Path=Title}"
                           Grid.Column="1"/>

                <Button x:Name="btn_control_minimize"
                        Grid.Column="4">
                    <fa:IconImage Icon="WindowMinimize"/>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:ChangePropertyAction TargetObject="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                                    PropertyName="WindowState"
                                                    Value="{x:Static WindowState.Minimized}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
                <Button x:Name="btn_control_maximize"
                        Grid.Column="5">
                    <fa:IconImage Icon="WindowMaximize"/>
                </Button>
                <Button x:Name="btn_control_close"
                        Grid.Column="6">
                    <fa:IconImage Icon="WindowClose"/>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:CallMethodAction TargetObject="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                                MethodName="Close"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>

            </Grid>
            
                <Grid x:Name="body"
                      Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MaxWidth="200"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                <StackPanel x:Name="menubar"
                      Grid.Column="0">
                    <Button Content="Dashbord" />
                    <Button Content="ContactList" 
                                  Command="{Binding NavigateToContactListCommand}"/>


                </StackPanel>

                <ContentPresenter x:Name="content"
                                  Grid.Column="1"
                                  Content="{Binding CurrentView}"/>

            </Grid>
                    
            <Border x:Name="border_bottom"
                    Grid.Row="2">
                <TextBlock Text="Be Comming..." />
            </Border>


        </Grid>
        
    </Border>
</Window>
