<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp">



    <Style x:Key="CustomIconImage.Custom.Square.Center" TargetType="{x:Type fa:IconImage}" >
        <Setter Property="Height" Value="15" />
        <Setter Property="Width" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Height}" />
        <Setter Property="Margin" Value="0 0 5 0" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="CustomIconImage.Custom.Square.Bottom" TargetType="{x:Type fa:IconImage}" >
        <Setter Property="Height" Value="15" />
        <Setter Property="Width" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Height}" />
        <Setter Property="Margin" Value="10 0 0 0" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Bottom" />
    </Style>

</ResourceDictionary>