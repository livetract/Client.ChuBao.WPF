<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">




    <Style x:Key="BorderCustomStyle.Primary" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource Boarder.Background}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Boarder.BorderBrush}" />
        <Setter Property="BorderThickness" Value="0.5" />
    </Style>


    <Style x:Key="BorderCustomStyle.Secondary" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource Boarder.Background}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Boarder.BorderBrush}" />
        <Setter Property="BorderThickness" Value="0.3" />
    </Style>

    <Style x:Key="BorderCustomStyle.NonThickness" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource Boarder.Background}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Boarder.BorderBrush}" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

</ResourceDictionary>